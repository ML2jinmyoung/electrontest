{
  "name": "electron-folder-app",
  "version": "1.0.0",
  "description": "Folder upload manager - Electron + React + FastAPI MVP",
  "main": "electron/main.js",
  "scripts": {
    "dev:react": "vite",
    "dev:electron": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
    "dev": "concurrently -k \"npm run dev:react\" \"npm run dev:electron\"",
    "build:react": "vite build",
    "build": "npm run build:react && electron-builder",
    "start": "electron ."
  },
  "build": {
    "appId": "com.example.folder-upload",
    "productName": "Folder Upload Manager",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "vite": "^5.0.12",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
